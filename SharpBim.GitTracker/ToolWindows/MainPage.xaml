<uc:SharpBIMUserControl x:Class="SharpBIM.GitTracker.Mvvm.MainPage"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                        xmlns:local="clr-namespace:SharpBIM.GitTracker.Mvvm"
                        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                        xmlns:mv="clr-namespace:SharpBim.GitTracker.ToolWindows"
                        xmlns:st="clr-namespace:SharpBIM.GitTracker.Core.Enums;assembly=SharpBIM.GitTracker.Core"
                        xmlns:uc="clr-namespace:SharpBIM.WPF.Controls.UserControls;assembly=SharpBIM"
                        xmlns:ui="clr-namespace:SharpBIM.WPF.Controls;assembly=SharpBIM"
                        xmlns:v="clr-namespace:SharpBIM.GitTracker.Mvvm.Views"
                        d:DataContext="{d:DesignInstance Type={x:Type mv:MainPageViewModel}}"
                        Background="{DynamicResource ControlBackgroundBrush}"
                        mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <StackPanel VerticalAlignment="Top"
                    Orientation="Horizontal">
            <ui:UIButton Margin="5"
                         Command="{Binding LoginCommand}"
                         ShowText="False" />
            <ui:UiComboBox MinWidth="150"
                           DisplayMemberPath="name"
                           ItemsSource="{Binding RepoModels}"
                           SelectedItem="{Binding SelectedRepo}" />
            <ui:UIButton Margin="5"
                         Glyph="filter"
                         ShowText="False" />
        </StackPanel>

        <Grid x:Name="content"
              Grid.Row="1"
              IsEnabled="{Binding LoggedIn}">
            <Frame x:Name="SharpBIMViewer"
                   Grid.Column="1"
                   Background="Transparent"
                   Content="{Binding CurrentView}"
                   NavigationUIVisibility="Visible" />
        </Grid>
    </Grid>
</uc:SharpBIMUserControl>