<uc:SharpBIMUserControl x:Class="SharpBIM.GitTracker.Core.WPF.Mvvm.Views.SharpColorPicker"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                        xmlns:local="clr-namespace:SharpBIM.GitTracker.Core.WPF.Mvvm.Views"
                        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                        xmlns:uc="clr-namespace:SharpBIM.WPF.Controls.UserControls;assembly=SharpBIM"
                        d:DesignHeight="450"
                        d:DesignWidth="800"
                        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TextBlock FontSize="14"
                   FontWeight="Bold"
                   Foreground="{DynamicResource ControlFontBrush}"
                   Text="Sharp Color Picker" />
        <Grid Grid.Row="1">
            <Rectangle x:Name="ColorSpectrum"
                       Width="300"
                       Height="150"
                       Cursor="Cross"
                       MouseDown="ColorSpectrum_MouseDown" />
        </Grid>
    </Grid>
</uc:SharpBIMUserControl>