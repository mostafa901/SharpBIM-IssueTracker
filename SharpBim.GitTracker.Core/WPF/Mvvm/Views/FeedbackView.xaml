<uc:SharpBIMUserControl x:Class="SharpBIM.GitTracker.Core.WPF.Mvvm.Views.FeedbackView"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:UIElement="clr-namespace:SharpBIM.WPF.Controls;assembly=SharpBIM"
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                        xmlns:helpers="clr-namespace:SharpBIM.WPF.Helpers;assembly=SharpBIM"
                        xmlns:local="clr-namespace:SharpBIM.GitTracker.Core.WPF.Mvvm.Views"
                        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                        xmlns:uc="clr-namespace:SharpBIM.WPF.Controls.UserControls;assembly=SharpBIM"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        d:DataContext="{d:DesignInstance Type={x:Type local:FeedbackViewModel}}"
                        d:DesignHeight="450"
                        d:DesignWidth="800"
                        Background="Transparent"
                        mc:Ignorable="d">
    <StackPanel helpers:MarginSetter.Margin="0 15 0 0">
        <UIElement:TaggedTextBox HorizontalAlignment="Stretch"
                                 BorderThickness="0,0,0,1"
                                 TaggedText="Issue Title"
                                 TaggedWidth="130"
                                 Text="{Binding IssueTitle}" />
        <UIElement:TaggedTextBox Width="auto"
                                 HorizontalAlignment="Stretch"
                                 BorderThickness="0,0,0,1"
                                 TaggedText="Issue description"
                                 TaggedWidth="130"
                                 Text="{Binding IssueBody}" />
    </StackPanel>
</uc:SharpBIMUserControl>